<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:orientation="vertical" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_mysleepcreambackground"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bggraystriped"
                android:orientation="vertical" >

                
				<LinearLayout
                    android:id="@+id/llISI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" > 

                    <TextView
                        android:id="@+id/tISIQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_whitetextbox"
                        android:gravity="center_horizontal"
                        android:padding="0dp"
                        android:text="@string/s_snq1"
                        android:textColor="#1c2739"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <CheckBox
                            android:id="@+id/cbISIQ0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/bg_whitetextbox"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/s_Never"
                            android:textColor="#1c2739"
                            android:textSize="15dp" 
                        	android:contentDescription="@string/s_NeverCheckbox" />

                        <CheckBox
                            android:id="@+id/cbISIQ1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/bg_whitetextbox"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/s_Rarely"
                            android:textColor="#1c2739"
                            android:textSize="15dp" 
                            android:contentDescription="@string/s_RarelyCheckbox"/>

                        <CheckBox
                            android:id="@+id/cbISIQ2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/bg_whitetextbox"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/s_Sometimes"
                            android:textColor="#1c2739"
                            android:textSize="15dp"
                            android:contentDescription="@string/s_SometimesCheckbox" />

                        <CheckBox
                            android:id="@+id/cbISIQ3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/bg_whitetextbox"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/s_Frequently"
                            android:textColor="#1c2739"
                            android:textSize="15dp"
                            android:contentDescription="@string/s_FrequentlyCheckbox" />

                        <CheckBox
                            android:id="@+id/cbISIQ4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_whitetextbox"
                            android:gravity="center_vertical|right"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/s_Always"
                            android:textColor="#1c2739"
                            android:textSize="15dp"
                            android:contentDescription="@string/s_AlwaysCheckbox" />
                    </LinearLayout>
                    <!-- end ISI screen 1 -->
                </LinearLayout>
                
				<TextView
				    android:id="@+id/tSNQResult"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="10dp"
				    android:layout_marginRight="10dp"
				    android:layout_marginTop="10dp"
				    android:background="@drawable/bg_whitetextbox"
				    android:gravity="center_horizontal"
				    android:padding="10dp"
				    android:text="@string/s_snq09a"
				    android:textColor="#1c2739"
				    android:textSize="15dp" 
				    android:visibility="gone" />

                <Button
                    android:id="@+id/bNextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/bg_whitebutton"
                    android:contentDescription="@string/s_NextQuestionButton"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/s_NextQuestion"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_whitebutton"
                    android:contentDescription="@string/s_SubmitButton"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/s_Submit"
                    android:visibility="gone" />
                
                <Button
                    android:id="@+id/bDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_whitebutton"
                    android:contentDescription="@string/s_DoneButton"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/s_Done"
                    android:visibility="gone" />
                
                <Button
                    android:id="@+id/bAdd15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_whitebutton"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/s_Add15"
                    android:visibility="gone"
                    android:contentDescription="@string/s_Add15MinutesButton"  />
                
                <Button
                    android:id="@+id/bAdd30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_whitebutton"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/s_Add30"
                    android:visibility="gone"
                    android:contentDescription="@string/s_Add30MinutesButton"  />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- middle buttons -->

</RelativeLayout>