<!--   top bar defintiion -->
   	<RelativeLayout 
   	    xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/rl1"
       	android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:background="@drawable/bg_topbar"
    	>
		
   	    <Button 
   	        android:id="@+id/midLeft"
   	        android:layout_width="60dp"
    		android:layout_height="match_parent"
    		android:layout_marginTop="5dp"
    	   	android:layout_marginBottom="5dp"
    	    android:layout_marginLeft="5dp"
    	    android:layout_marginRight="5dp"
    	    android:layout_alignParentLeft="true"
    	    android:background="@drawable/bg_topbarbuttons"
    	  	/>
    
    	<TextView
    	    android:id="@+id/midTitle"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:gravity="center_vertical|center_horizontal"
    	    android:textColor="@color/tbText"
    	    android:textSize="20dp" 
    	    android:layout_centerInParent="true" />
    	
    	<Button
    	    android:id="@+id/midRight"
    	    android:layout_width="wrap_content"
    	    android:layout_height="match_parent"
    	    android:layout_alignParentRight="true"
    	    android:layout_marginBottom="5dp"
    	    android:layout_marginLeft="5dp"
    	    android:layout_marginRight="5dp"
    	    android:layout_marginTop="5dp"
    	    android:background="@drawable/bg_topbarbuttons"
    	    android:paddingLeft="5dp"
    	    android:paddingRight="5dp"
    	    android:textColor="@color/tbText" 
    	    android:contentDescription="@string/s_NewEntryButton" />
       
   </RelativeLayout>
   <!--   end of top bar defintiion -->
